<div>
	<%= render 'admin/head' %>
	<p id="notice"><%= notice %></p>
	<%= link_to new_admin_category_path do %>
		<button class='btn btn-success'>New Category</button>
	<% end %>
	<table class="table table-striped table-hover admin-table">
		<thead>
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th>Description</th>
				<th>Opeations</th>
			</tr>
		</thead>
		<tbody>
			<% @categories.each do |category| %>
			<tr>
				<td><%= category.id %></td>
				<td><%= category.name %></td>
				<td><%= category.description %></td>
				<td>
					<%= link_to admin_category_path(category) do %>
						<i class="operations fa fa-eye fa-2x"></i>
					<% end %>
					<%= link_to edit_admin_category_path(category) do %>
						<i class="operations fa fa-pencil-square-o fa-2x"></i>
					<% end %>
					<%= link_to(admin_category_path(category), method: :delete, data: {confirm: "Are you sure?"}) do %>
						<i class="operations fa fa-trash fa-2x"></i></a>
					<% end %>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>