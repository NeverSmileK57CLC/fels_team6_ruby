<div>
  <div>
  </div>
  <div>
  <% if @word.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@word.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_for [:admin, @word] do |f| %>
    <div class="form-group">
      <%= f.label "Content", class: 'control-label' %><br>
      <%= f.text_field :content, class: 'form-control', required: true %>
    </div>
    <div class="form-group">
      <%= f.label "Category", class: 'control-label' %><br>
      <select class="form-control" name="word[category_id]">
      <% @categories.each do |category| %>
        <option value="<%= category.id %>">
        <%= category.name %>
        </option>
      <% end %>
      </select>
    </div>
    <div class="form-group">
      <%= f.label "Answers", class: 'control-label' %><br>
      <%= f.fields_for :word_answers do |answer| %>
        <div class="form-group">
          <%= answer.text_field :content, class: 'form-control', required: true %>
    
          <%= answer.label :correct, class: 'control-label' %>
          <%= answer.check_box :correct %>
        </div>
      <% end %>
    </div>
    <div class="action">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
  </div>
</div>