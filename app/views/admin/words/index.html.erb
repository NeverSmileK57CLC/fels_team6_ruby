<div>
	<%= render 'admin/head' %>
	<p id="notice"><%= notice %></p>
	<%= link_to new_admin_word_path do %>
		<button class='btn btn-success'>New Word</button>
	<% end %>
	<table class="table table-striped table-hover admin-table">
		<thead>
			<tr>
				<th>ID</th>
				<th>Content</th>
				<th>Category</th>
				<th>Opeations</th>
			</tr>
		</thead>
		<tbody>
			<% @words.each do |word| %>
			<tr>
				<td><%= word.id %></td>
				<td><%= word.content %></td>
				<td><%= word.category.name %></td>
				<td>
					<%= link_to "#" do %>
						<i class="operations fa fa-eye fa-2x"></i>
					<% end %>
					<%= link_to edit_admin_word_path(word) do %>
						<i class="operations fa fa-pencil-square-o fa-2x"></i>
					<% end %>
					<%= link_to(admin_word_path(word), method: :delete, data: {confirm: "Are you sure?"}) do %>
						<i class="operations fa fa-trash fa-2x"></i></a>
					<% end %>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>