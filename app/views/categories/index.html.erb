<table class="table table-striped">
<thead>
	<tr>
		<th>ID</th>
		<th>Name</th>
		<th>Description</th>
		<th>Action</th>
	</tr>
</thead>
<% @categories.each do |category| %>
	<tr>
		<td><%= category.id %></td>
		<td><%= category.name %></td>
		<td><%= category.description %></td>
		<td>
			<%= link_to lessons_new_path(:category_id => category.id), method: :get do %>
				<button class="btn btn-primary">Start</button>
			<% end %>
		</td>
	</tr>
<% end %>
</table>