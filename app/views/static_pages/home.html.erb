	<div class="col-md-3 user-info-home">
		<div class="row">
			<%= gravatar_for @user %>
		</div>
		<div class="row name">
			<%= @user.fullname %>
		</div>
		<div class="row learned-word">
			Learned <%= @learned_word %> words
		</div>
	</div>
	<div class="col-md-9">
		<div>
		<%= link_to words_path do %>
			<button class="btn btn-primary">Words</button>
		<% end %>
		<%= link_to categories_path do %>
			<button class="btn btn-primary">Lesson</button>
		<% end %>
		</div>
		<h1>Activities</h1>
	</div>
</div>