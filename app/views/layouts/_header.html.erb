<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <% home_link = signin_path %>
    <% home_link = home_path if signed_in? %>
    <%= link_to home_link, id: "logo" do %>
      <i class="fa fa-mortar-board fa-custom app-symbol"></i>giapponese
    <% end %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", home_link %></li>
        <% if !signed_in? %>
          <li><%= link_to "Sign in", signin_path %></li>
        <% else %>
          <li><%= link_to "Words", words_path %></li>
          <li><%= link_to "Categories", categories_path %></li>
          <li><%= link_to "Lessons", lessons_path %></li>
          <% if current_user.role == "Admin" %>
            <li><%= link_to "Admin", admin_users_path %></li>
          <% end %>
          <li><%= link_to "Log out", logout_path, method: :delete %> </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>